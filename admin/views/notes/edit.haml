.block
  .secondary-navigation
    %ul.wat-cf
      %li.first=link_to pat(:list), url(:notes, :index)
      %li=link_to pat(:new), url(:notes, :new)
      %li.active=link_to pat(:edit), url(:notes, :edit, :id => @note.id)
  .content
    %h2.title
      =pat(:edit)
      =mt(:note)
    .inner
      -form_for :note, url(:notes, :update, :id => @note.id), :method => :put, :class => :form do |f|
        =partial "notes/form", :locals => { :f => f }

-content_for :sidebar, partial("base/sidebar")