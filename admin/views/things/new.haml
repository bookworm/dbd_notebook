.block
  .secondary-navigation
    %ul.wat-cf
      %li.first=link_to pat(:list), url(:things, :index)
      %li.active=link_to pat(:new), url(:things, :new)
  .content
    %h2.title
      =pat(:new)
      =mt(:thing)
    .inner
      -form_for :thing, url(:things, :create), :class => :form do |f|
        =partial "things/form", :locals => { :f => f }

-content_for :sidebar, partial("base/sidebar")