.block
  .secondary-navigation
    %ul.wat-cf
      %li.first.active=link_to pat(:list), url(:audios, :index)
      %li=link_to pat(:new), url(:audios, :new)
  .content
    %h2.title
      =pat(:all)
      =mt(:audio)
    .inner
      %table.table
        %tr
          %th.first=mat(:audio, :title)
          %th=mat(:audio, :updated_at)
          %th=mat(:audio, :song_title)
          %th=mat(:audio, :status)
          %th.last="&nbsp;"
        -@audios.each do |audio|
          %tr
            %td.first=audio.title
            %td=audio.updated_at
            %td=audio.song_title
            %td=audio.status
            %td.last
              =button_to pat(:edit), url(:audios, :edit, :id => audio.id), :method => :get, :class => :button_to
              ="|"
              =button_to pat(:delete), url(:audios, :destroy, :id => audio.id), :method => :delete, :class => :button_to
      .actions-bar.wat-cf
        .actions="&nbsp;"

-content_for :sidebar, partial("base/sidebar")