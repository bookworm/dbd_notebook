!!! 5  
%html{:lang => "en" }
  %head 
    %meta{:charset => "UTF-8"}     
    %title The Daily Notebook | #{@post.title}
    = css_assets 'post'
    %script{:charset => "utf-8", :src => "http://ajax.googleapis.com/ajax/libs/jquery/1.4.4/jquery.min.js", :type => "text/javascript"}  
    = js_assets 'post'  
  %body.index
    = partial "partials/header" 
    %section#post.wrapper
      %article.note
        %header 
          %a{:href => "#{@post.slug}", :class => :post_title}
            %h1.post_title= @post.title
          .meta_top
            .date= "#{@post.created_at.strftime('%B %d')}, #{@post.created_at.strftime('%Y')}"
        .main
          .top  
          .middle            
            .post= @post.body
          .bottom_wrap
            .bottom
          .meta_bottom
            %a.comment_count{:href => "#{@post.slug}/#comment_form"}
              %span.count= @post.comment_count 
        .side_bar  
          .tags.block
            %h2.tags_head Tags
            - tags = @post.tags.split(',')
            %ul.tags_list 
              - tags.each do |tag|
                %li.tag
                  %a.tag_link{:href => "tags/#{tag}"}
                    %span= tag     
          .type.block  
            %h2.type_head Type
            %a.type{:href => "type/#{@post.class.to_s.downcase}"}= @post.class
      .clear  
      #comments   
        .write_comment 
          %a{:href => "#" } Write Comment 
        = partial "comments/comments"
      #comment_forms
        = partial "comments/form"
    = partial "partials/footer"      